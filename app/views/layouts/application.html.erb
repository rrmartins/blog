<!DOCTYPE html>
<html>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<head>
		<title>Blog</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag("base.css") %>
		<%= stylesheet_link_tag("base2.css") %>
		<%= stylesheet_link_tag("grid.css")%>
		<%= stylesheet_link_tag("extensions.css")%>
		<%= csrf_meta_tag %>
		<%= javascript_include_tag("jquery-1.6.3.min") %>
		<%= javascript_include_tag("jquery.cookie") %>
		<%= javascript_include_tag("jquery.uniform") %>
		<%= javascript_include_tag("jquery.idTabs") %>
		<%= javascript_include_tag("jquery.tipsy") %>
		<%= javascript_include_tag("jquery.facebox") %>
		<%= javascript_include_tag("jquery.visualize") %>
		<%= javascript_include_tag :defaults %>
		<!--[if IE]>
			<%= javascript_include_tag("excanvas") %>
		<![endif]-->
		<%= javascript_include_tag("functions") %>
		<!-- /JS -->

	</head>
	<body>
		<body class="layout980">
<div id="page-wrapper" class="width"> 
  <!-- HEADER -->
  <div id="header_2"> 
    <!-- USERAREA -->
    <!--ul class="hmenu">
		</ul-->
	<div class="user-area fr"> 
    	<span class="spacer">
    		<% if !current_admin_user.nil?  %>
			Seja Bem Vindo <strong> <%= current_admin_user.email %> </strong> !
			<!--Hello <strong>John Doe</strong></span> | <a href="#messages" class="spacer" rel="modal">Messages <span class="notfi">3</span></a-->
			<% end %>
		</span>
     </div>
    <!-- USERAREA END --> 
    <!-- LOGO --> 
    <!--img id="logo" src="img/logo.png" alt="" border="" /-->
    <div class="topo">
			<center><font size="52px">Rodrigo Martins</font></center>
		</div> 
    <!-- LOGO END --> 
  </div>
  <!-- HEADER END --> 
  <!-- NAV -->
  <ul id="nav">
    <li class="current"><a href="<%= root_url %>posts">Home</a></li>
    <li><a href="#">Pages</a>
      <ul>
        <li><a href="#">Agenda</a></li>
        <li><a href="#">O código-fonte</a></li>
      </ul>
    </li>
    <li><a href="#">Quem sou.. :D </a></li>
    <li style="float: right;"><%= render 'devise/menu/registration_items' %></li>
    <li style="float: right;"><%= render 'devise/menu/login_items' %></li>
  </ul>
  <!-- NAV END -->

		<br/>
		<p class="notice">
			<%= notice %>
		</p>
		<p class="alert">
			<%= alert %>
		</p>
		<%= yield %>
		<br/>
		<br/>
		
		<table border="0">
	  	<tr>
		    <td><%= image_tag Twitter.profile_image("rr_martins", :size => 'bigger') %></td>
	    	<td><%= Twitter.user('rr_martins').location %>
	    		<br> <%= Twitter.user('rr_martins').description %>
	    	</td>
	  	</tr>
		<% Twitter.user_timeline("rr_martins",{:count=>5}).each do |twit| %>
	  		<tr>
			    <td colspan="2"><%= twit.text %></td>
	  		</tr>
		<% end %>
		</table>
		
		<div id="footer" class="tr"> 
			Copyright ©2011, A <a href="http://www.rrmartins.com/">Rodrigo Martins</a>, <a href="http://www.twitter.com/rr_martins">@rr_martins</a> 
		</div>
  <!-- FOOTER END --> 
	</div>
<!-- EXTRAS (MODALS) -->
