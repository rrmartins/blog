    </div>
     
    <!-- LOGO END --> 
  </div>
  <!-- HEADER END --> 
  <!-- NAV -->
  <ul id="nav">
    <li class="current">
    	<a href="<%= root_url %>posts">Home</a>
    </li>
    <li class="current"><a href="#">Pages</a>
      <ul>
        <li><a href="#">Agenda</a></li>
        <li><a href="#">O código-fonte</a></li>
