  <form action="#" method="post">
    <h4>New Message</h4>
    <fieldset>
      <textarea class="textarea" name="textfield" cols="45" rows="5"></textarea>
    </fieldset>
    <fieldset>
      <input class="button medium fr" type="submit" value="Send" />
      <select name="dropdown">
        <option value="option1">Send to...</option>
        <option value="option2">Admin</option>
