<!DOCTYPE html>
<html>
	<head>
		<title>Blog</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= stylesheet_link_tag("base.css") %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<ul class="hmenu">
			<%= render 'devise/menu/registration_items' %>
			<%= render 'devise/menu/login_items' %>
		</ul>
		<div style="text-align: right;">
			<% if !current_user.nil?  %>
			Seja Bem Vindo <%= current_user.email %> !
			<% end %>
		</div>
		<br/>
		<p class="notice">
			<%= notice %>
		</p>
		<p class="alert">
			<%= alert %>
		</p>
		<%= yield %>
	</body>
</html>
