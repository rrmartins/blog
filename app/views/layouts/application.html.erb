    <li class="current" style="float: right;"><%= render 'devise/menu/registration_items' %></li>
    <li class="current" style="float: right;"><%= render 'devise/menu/login_items' %></li>
  </ul>
  <!-- NAV END -->

		<br/>
		<p class="notice">
			<%= notice %>
		</p>
		<p class="alert">
			<%= alert %>
		</p>
		<%= yield %>
		<br/>
		<br/>
		
		<div id="footer" class="tr"> 
			Copyright ©<%= DateTime.now.year.to_s %>, A <a href="http://www.rrmartins.com/">Rodrigo Martins</a>, <a href="http://www.twitter.com/rr_martins">@rr_martins</a> 
		</div>
  <!-- FOOTER END --> 
	</div>
